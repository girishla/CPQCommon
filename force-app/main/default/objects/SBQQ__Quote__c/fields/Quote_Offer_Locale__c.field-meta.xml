<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
        <fullName>Quote_Offer_Locale__c</fullName>
        <description>Locale used in Quote Offer document to define format for date and currency</description>
        <externalId>false</externalId>
        <formula>IF(TEXT(CurrencyIsoCode)=&quot;USD&quot;, &quot;en-US&quot;,
IF(TEXT(CurrencyIsoCode)=&quot;GBP&quot;, &quot;en-GB&quot;,
IF(TEXT(CurrencyIsoCode)=&quot;JPY&quot;, &quot;ja-JP&quot;,
IF(TEXT(CurrencyIsoCode)=&quot;EUR&quot;, &quot;fr-FR&quot;,&quot;en-US&quot;))))</formula>
        <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
        <label>Quote Offer Locale</label>
        <required>false</required>
        <trackHistory>false</trackHistory>
        <trackTrending>false</trackTrending>
        <type>Text</type>
        <unique>false</unique>
    </CustomField>
